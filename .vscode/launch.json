    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "preLaunchTask": "tsc",
            "program": "${workspaceFolder}/dist/main.js",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                "--debug",
                "tmp/build/index.html",
                "tmp/build/chapter01/index.html",
                "https://www.yahoo.co.jp"
            ]
        }
    ]
}